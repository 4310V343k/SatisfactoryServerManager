<div class="page-container" data-page="settings">
    <h2 class="mb-3">Settings</h2>
    <div class="card border-secondary mb-3">
        <div class="card-header">
            <h5>Select Server</h5>
        </div>
        <div class="card-body">
            <div class="row settings-row">
                <div class="col-12 col-md-4">
                    <b class="settings-prop">Server:</b>
                    <span class="settings-info">
                        Select a Server instance to manage settings on.
                    </span>
                </div>
                <div class="col-12 col-md-6">
                    <select class="form-control" id="inp_server">
                        <option value="-1">-- Select Server --</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-secondary mb-3">
        <div class="card-header">
            <h5>SSM Settings</h5>
        </div>
        <div class="card-body">
            <form action="" method="" class="form-horizontal">
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Server Location:</b>
                        <span class="settings-info">
                            Satisfactory server installation location.
                        </span>
                    </div>
                    <div class="col-12 col-md-8">
                        <b id="setting-info-serverloc"></b>
                    </div>
                </div>
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Saves Location:</b>
                        <span class="settings-info">
                            Satisfactory server saves location.
                        </span>
                    </div>
                    <div class="col-12 col-md-8">
                        <b id="setting-info-saveloc"></b>
                    </div>
                </div>
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Logs Location:</b>
                        <span class="settings-info">
                            Satisfactory server log location.
                        </span>
                    </div>
                    <div class="col-12 col-md-8">
                        <b id="setting-info-logloc"></b>
                    </div>
                </div>
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Update On SSM Start:</b>
                        <span class="settings-info">
                            Update Satisfactory server on start of SSM
                        </span>
                    </div>
                    <div class="col-12 col-md-8">
                        <input id="inp_updatesfonstart" type="checkbox" data-on="Enabled" data-off="Disabled"
                            data-onstyle="success" data-offstyle="danger" checked data-toggle="toggle" data-width="100"
                            data-size="small" disabled>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-warning float-left" id="edit-ssm-settings"><i class="fas fa-edit"></i>
                        Edit</button>
                    <button disabled class="btn btn-success float-right" id="save-ssm-settings"><i
                            class="fas fa-save"></i>
                        Save</button>
                    <button disabled class="btn btn-danger float-right mr-3" id="cancel-ssm-settings"><i
                            class="fas fa-times"></i>
                        Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-secondary mb-3">
        <div class="card-header">
            <h5>Satisfactory Server Settings</h5>
        </div>
        <div class="card-body">
            <form action="" method="" class="form-horizontal">
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Max Players:</b>
                        <span class="settings-info">
                            Number of players that can join the server.
                        </span>
                    </div>
                    <div class="col-12 col-md-6">
                        <input type="range" class="form-control-range" id="inp_maxplayers" min="4" max="500" value="4"
                            disabled>
                    </div>

                    <div class="col-12 col-md-2">
                        <span id="max-players-value">0 / 50</span>
                    </div>
                </div>
            </form>

            <div class="row">
                <div class="col-12">
                    <button class="btn btn-warning float-left" id="edit-sf-settings"><i class="fas fa-edit"></i>
                        Edit</button>
                    <button disabled class="btn btn-success float-right" id="save-sf-settings"><i
                            class="fas fa-save"></i>
                        Save</button>
                    <button disabled class="btn btn-danger float-right mr-3" id="cancel-sf-settings"><i
                            class="fas fa-times"></i>
                        Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-secondary mb-3">
        <div class="card-header">
            <h5>Mod Settings</h5>
        </div>
        <div class="card-body">
            <form action="" method="" class="form-horizontal">
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Enabled:</b>
                        <span class="settings-info">
                            Choose whether to use mods or not.
                        </span>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="checkbox">
                            <input id="inp_mods_enabled" type="checkbox" data-on="Enabled" data-off="Disabled"
                                data-onstyle="success" data-offstyle="danger" checked data-toggle="toggle"
                                data-width="100" data-size="small" disabled>
                        </div>
                    </div>
                </div>
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Auto Update:</b>
                        <span class="settings-info">
                            Choose whether automatically update all mods to latest version.
                        </span>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="checkbox">
                            <input id="inp_mods_autoupdate" type="checkbox" data-on="Enabled" data-off="Disabled"
                                data-onstyle="success" data-offstyle="danger" checked data-toggle="toggle"
                                data-width="100" data-size="small" disabled>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-warning float-left" id="edit-mods-settings"><i class="fas fa-edit"></i>
                        Edit</button>
                    <button disabled class="btn btn-success float-right" id="save-mods-settings"><i
                            class="fas fa-save"></i>
                        Save</button>
                    <button disabled class="btn btn-danger float-right mr-3" id="cancel-mods-settings"><i
                            class="fas fa-times"></i>
                        Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-danger mb-3">
        <div class="card-header">
            <h5>Danger Area!</h5>
        </div>
        <div class="card-body">
            <form action="" method="" class="form-horizontal">
                <div class="row settings-row">
                    <div class="col-12 col-md-4">
                        <b class="settings-prop">Install/Reinstall Server:</b>
                        <span class="settings-info">
                            Install or Reinstall Satisfactory Server
                        </span>
                    </div>
                    <div class="col-12 col-md-8">
                        <button class="btn btn-danger" id="settings-dangerarea-installsf"><i
                                class="fas fa-download"></i> Install / Reinstall</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>